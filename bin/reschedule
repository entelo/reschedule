#!/usr/bin/env ruby

require_relative '../lib/reschedule'

begin
  scheduler = Rufus::Scheduler.new
  scheduler.every Reschedule.configuration.run_interval do
    Reschedule::Rescheduler.new.run
  end
  scheduler.join
rescue => e
  STDERR.puts e.message
  STDERR.puts e.backtrace.join("\n")
  exit 1
end
